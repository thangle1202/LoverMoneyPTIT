<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/icons8_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal" />
            <ImageView
                android:src="@mipmap/icons_selecdt_gr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal" />
            <ImageView
                android:src="@mipmap/icons8_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal" />
            <ImageView
                android:src="@mipmap/icons8_date_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal" />
            <ImageView
                android:src="@mipmap/icons8_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/txtDealValue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal"
                android:layout_marginBottom="0dp"
                android:inputType="number"/>
            <LinearLayout
                android:id="@+id/selectGroupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtGroup"
                    android:hint="@string/hint_select_group"
                    android:gravity="center_vertical"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_icon_fragment_add_deal"
                    android:layout_marginBottom="0dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_icon_fragment_add_deal"
                android:layout_marginBottom="0dp"
                android:hint="@string/note"
                android:textSize="24sp"/>
            <LinearLayout
                android:id="@+id/datePickerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtDealCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_icon_fragment_add_deal"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/hint_select_date"
                    android:gravity="center_vertical"
                    android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/selectWalletLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtSelectWallet"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/hint_select_wallet"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_icon_fragment_add_deal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>



